<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.RegisterFormFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_medium">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_parenting_hub_blue"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengkapi_data_diri"
            android:textColor="@color/colorBlueBackground"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/iv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextBody1SemiBoldRaleway"/>

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/tanggal_lahir"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:focusable="false"
            android:inputType="date"
            android:drawableEnd="@drawable/ic_baseline_today_24"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/jenis_kelamin"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_birth"/>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempat_tinggal"
            android:textColor="@color/colorBlueBackground"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/et_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextBody2SemiBoldRaleway"/>

        <EditText
            android:id="@+id/et_provinsi"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:hint="@string/provinsi"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title2"
            tools:layout_editor_absoluteX="15dp" />

        <EditText
            android:id="@+id/et_kota"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/kota"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_provinsi"/>

        <EditText
            android:id="@+id/et_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/kecamatan"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_kota"/>

        <EditText
            android:id="@+id/et_kodePos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/kode_pos"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:textColor="@color/colorText"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_kecamatan"/>

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/alamat_lengkap"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:maxLength="300"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/et_kodePos"/>

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/akun_sosial_media"
            android:textColor="@color/colorBlueBackground"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/et_alamat"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextBody2SemiBoldRaleway"/>

        <TextView
            android:id="@+id/tv_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opsional"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/et_alamat"
            app:layout_constraintLeft_toRightOf="@id/tv_title3"
            android:textAppearance="@style/TextBody2Regular"/>

        <EditText
            android:id="@+id/et_instagram"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/instagram"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawablePadding="@dimen/margin_small"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            app:layout_constraintTop_toBottomOf="@id/tv_title4"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/et_twitter"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/twitter"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/et_instagram"
            tools:ignore="RtlCompat"/>

        <EditText
            android:id="@+id/et_facebook"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/akun_facebook"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/et_twitter" />

        <EditText
            android:id="@+id/et_youtube"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/youtube_channel"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/et_facebook" />

        <EditText
            android:id="@+id/et_blog"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/blog"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/et_youtube" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_input_form_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/simpan_data"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:textAppearance="@style/TextBody2Bold"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:background="@drawable/bg_button_blue"
            app:cornerRadius="@dimen/margin_medium_large"
            app:layout_constraintTop_toBottomOf="@id/et_blog"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>