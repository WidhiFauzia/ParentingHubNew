<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.RegisterFormFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="135dp"
            android:layout_height="31dp"
            android:background="@drawable/title"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengkapi_data_diri"
            android:textColor="@color/colorBlueBackground"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextAppearanceBold"/>

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Tanggal Lahir"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:focusable="false"
            android:inputType="date"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_today_24"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Jenis Kelamin"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_birth"/>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempat_tinggal"
            android:textColor="@color/colorBlueBackground"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextAppearance1"/>

        <EditText
            android:id="@+id/et_provinsi"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:hint="Provinsi"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title2"
            tools:layout_editor_absoluteX="15dp" />

        <EditText
            android:id="@+id/et_kota"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Kota"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_provinsi"/>

        <EditText
            android:id="@+id/et_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Kecamatan"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_kota"/>

        <EditText
            android:id="@+id/et_kodePos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Kode Pos"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_kecamatan"/>

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Alamat Lengkap"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:maxLength="300"
            android:padding="15dp"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/et_kecamatan"/>

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/akun_sosial_media"
            android:textColor="@color/colorBlueBackground"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_alamat"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextAppearance1"/>

        <TextView
            android:id="@+id/tv_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opsional"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_alamat"
            app:layout_constraintLeft_toRightOf="@id/tv_title3"
            style="@style/TextAppearance1"/>

        <EditText
            android:id="@+id/et_instagram"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Instagram"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            app:layout_constraintTop_toBottomOf="@id/tv_title4"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/et_twitter"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="10dp"
            android:hint="Twitter"
            android:inputType="text"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/et_instagram"
            tools:ignore="RtlCompat"/>

        <EditText
            android:id="@+id/et_facebook"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="10dp"
            android:hint="Facebook"
            android:inputType="text"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/et_twitter" />

        <EditText
            android:id="@+id/et_youtube"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="10dp"
            android:hint="YouTube Channel"
            android:inputType="text"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/et_facebook" />

        <EditText
            android:id="@+id/et_blog"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="10dp"
            android:hint="Blog"
            android:inputType="text"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/et_youtube" />

        <Button
            android:id="@+id/btn_input_form_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_blue"
            android:text="@string/simpan_data"
            style="@style/TextAppearance1"
            android:textAllCaps="true"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/et_blog"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>