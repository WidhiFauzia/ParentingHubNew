<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.register.RegisterFormFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_medium">

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_parenting_hub_blue"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete_personal_data"
            android:textColor="@color/colorBlueBackground"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/ivTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextBody1SemiBoldRaleway"/>

        <EditText
            android:id="@+id/etBirth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/birthday"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:focusable="false"
            android:inputType="date"
            android:drawableEnd="@drawable/ic_baseline_today_24"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <EditText
            android:id="@+id/etGender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/gender"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/etBirth"/>

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_address"
            android:textColor="@color/colorBlueBackground"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/etGender"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextBody2SemiBoldRaleway"/>

        <EditText
            android:id="@+id/etProvince"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:hint="@string/province"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvTitle2"/>

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/city"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/etProvince"/>

        <EditText
            android:id="@+id/etDistrict"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/district"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/etCity"/>

        <EditText
            android:id="@+id/etPostalCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/postal_code"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:textColor="@color/colorText"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/etDistrict"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xxxlarge"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/address"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:maxLength="300"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/etPostalCode"/>

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_media_account"
            android:textColor="@color/colorBlueBackground"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextBody2SemiBoldRaleway"/>

        <TextView
            android:id="@+id/tvTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optional"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintLeft_toRightOf="@id/tvTitle3"
            android:textAppearance="@style/TextBody2Regular"/>

        <EditText
            android:id="@+id/etInstagram"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="@string/instagram"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"
            android:inputType="text"
            android:drawablePadding="@dimen/margin_small"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            app:layout_constraintTop_toBottomOf="@id/tvTitle4"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/etTwitter"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableStart="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/twitter"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/etInstagram"
            tools:ignore="RtlCompat"/>

        <EditText
            android:id="@+id/etFacebook"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/account_facebook"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/etTwitter" />

        <EditText
            android:id="@+id/etYoutube"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/youtube_channel"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/etFacebook" />

        <EditText
            android:id="@+id/etBlog"
            android:textAppearance="@style/TextBody2Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawablePadding="@dimen/margin_small"
            android:hint="@string/blog"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/etYoutube" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInputFormRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_small_large"
            android:text="@string/save"
            android:layout_marginStart="@dimen/margin_medium_small"
            android:layout_marginEnd="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:textAppearance="@style/TextBody2Bold"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:insetTop="@dimen/margin_zero"
            android:insetBottom="@dimen/margin_zero"
            app:backgroundTint="@color/colorBlueBackground"
            app:cornerRadius="@dimen/margin_medium_small"
            app:layout_constraintTop_toBottomOf="@id/etBlog"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>