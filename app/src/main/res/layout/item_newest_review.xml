<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/dummy_product"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvProductBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextOverlineRegular"
            android:text="ELIPSE KIDS"
            android:textAllCaps="false"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionRegular"
            android:text="Spill Proof Bowl Stage 3"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tvProductBrand"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbProductRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            android:progressTint="@color/colorYellow"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"/>

        <TextView
            android:id="@+id/tvRatingTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextOverlineRegular"
            android:text="5.0"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintStart_toEndOf="@id/rbProductRating"/>

        <TextView
            android:id="@+id/tvProductDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextOverlineRegular"
            android:text="So happy when I got this @elipsekids_id bowl soalnya bisa belajar spoonfeed sendiri anaknya. Jadi dia nyendok mangkuknya ga goyang2 (ada karet suctionnya) . . ."
            android:textAllCaps="false"
            android:lineHeight="@dimen/margin_medium"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/ivProductImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:id="@+id/ivProfileImage"
            android:src="@drawable/ic_invitation_sent"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/tvProductDesc"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testing_name"
            android:textAppearance="@style/TextOverlineRegular"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/tvProductDesc"
            app:layout_constraintStart_toEndOf="@id/ivProfileImage"/>

        <ImageView
            android:id="@+id/ivBullets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_gray"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_elevation"
            app:layout_constraintTop_toBottomOf="@id/tvProductDesc"
            app:layout_constraintStart_toEndOf="@id/tvName"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yesterday"
            android:textAppearance="@style/TextOverlineRegular"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:textColor="@color/colorTextGray"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/tvProductDesc"
            app:layout_constraintStart_toEndOf="@id/ivBullets"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivIconUseful"
            android:background="@drawable/ic_bermanfaat"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvUseful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextOverlineRegular"
            android:text="Bermanfaat?"
            android:textAllCaps="false"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
            app:layout_constraintStart_toEndOf="@id/ivIconUseful"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/ivReader1"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@id/tvUseful"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/ivReader2"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@id/ivReader1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/tvReader3"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@id/ivReader2"/>

        <TextView
            android:id="@+id/tvOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextOverlineRegular"
            android:text="18 Orang beranggapan ini bermanfaat"
            android:textAllCaps="false"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
            app:layout_constraintStart_toEndOf="@id/tvReader3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>