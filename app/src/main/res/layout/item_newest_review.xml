<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/dummy_product"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionBold"
            android:text="ELIPSE KIDS"
            android:textAllCaps="true"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_image"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextBody2Regular"
            android:text="Spill Proof Bowl Stage 3"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/product_brand"
            app:layout_constraintStart_toEndOf="@id/product_image"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            android:progressTint="@color/colorYellow"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toEndOf="@id/product_image"/>

        <TextView
            android:id="@+id/rating_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionBold"
            android:text="5.0"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toEndOf="@id/product_rating"/>

        <TextView
            android:id="@+id/product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionRegular"
            android:text="So happy when I got this @elipsekids_id bowl soalnya bisa belajar spoonfeed sendiri anaknya. Jadi dia nyendok mangkuknya ga goyang2 (ada karet suctionnya) . . ."
            android:textAllCaps="false"
            android:lineHeight="@dimen/margin_medium"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_invitation_sent"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/product_desc"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testing_name"
            android:textAppearance="@style/TextCaptionRegular"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/product_desc"
            app:layout_constraintStart_toEndOf="@id/profile_image"/>

        <ImageView
            android:id="@+id/bullets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_gray"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_elevation"
            app:layout_constraintTop_toBottomOf="@id/product_desc"
            app:layout_constraintStart_toEndOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kemarin"
            android:textAppearance="@style/TextCaptionRegular"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:textColor="@color/colorTextGray"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/product_desc"
            app:layout_constraintStart_toEndOf="@id/bullets"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_bermanfaat"
            android:background="@drawable/ic_bermanfaat"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_bermanfaat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionRegular"
            android:text="Bermanfaat?"
            android:textAllCaps="false"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/icon_bermanfaat"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/reader1"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/tv_bermanfaat"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/reader2"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/reader1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/reader3"
            android:src="@drawable/dummy_profile1"
            android:backgroundTint="@color/colorLightBlue"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginStart="@dimen/margin_tiny"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/reader2"/>

        <TextView
            android:id="@+id/tv_pendapat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextCaptionRegular"
            android:text="18 Orang beranggapan ini bermanfaat"
            android:textAllCaps="false"
            android:textColor="@color/colorTextGray"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/reader3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>