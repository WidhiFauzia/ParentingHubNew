<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.RegisterKidStep2Fragment">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_page_register_step_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_parentinghub_x_parentingregistry"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_large"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_large"
        android:layout_marginTop="@dimen/margin_small_large"
        android:background="@drawable/ic_back_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sebelumnya"
        android:textAppearance="@style/TextBody2Regular"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sebelumnya"
        android:textColor="@color/colorText"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        app:backgroundTint="@color/colorLightBlue"
        app:cornerRadius="@dimen/margin_medium_large"
        app:layout_constraintEnd_toStartOf="@+id/btn_selanjutnya"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_selanjutnya"
        android:textAppearance="@style/TextBody2Regular"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/selanjutnya"
        android:layout_marginTop="@dimen/margin_small_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorBlueBackground"
        app:cornerRadius="@dimen/margin_medium_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_sebelumnya"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_kid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/ic_seorang_ibu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:textAppearance="@style/TextBody1SemiBoldRaleway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/keluarga_semakin_ramai_dengan_si_kecil"
            android:textAlignment="center"
            android:textColor="@color/colorBlueBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_kid" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/berapa_jumlah_anak_anda_termasuk_dengan_yang_sedang_dikandung"
            android:textAppearance="@style/TextBody2Regular"
            android:textColor="@color/colorText"
            android:layout_margin="@dimen/margin_small"
            android:textAlignment="center"
            android:lineHeight="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorBlueBackground"
            android:layout_marginTop="@dimen/margin_small"
            android:focusable="false"
            android:textAppearance="@style/TextBody2Regular"
            app:layout_constraintTop_toBottomOf="@id/tv_about"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_elevation"
            app:layout_constraintTop_toBottomOf="@id/tv_about"
            app:layout_constraintLeft_toRightOf="@id/et_number"/>

        <ImageButton
            android:id="@+id/btn_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_minus"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_elevation"
            app:layout_constraintTop_toBottomOf="@id/tv_about"
            app:layout_constraintRight_toLeftOf="@id/et_number"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>