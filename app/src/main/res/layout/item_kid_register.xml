<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/bg_circle_image"
                android:id="@+id/iv_profil"
                android:layout_margin="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:layout_width="260dp"
                android:layout_height="75dp"
                android:id="@+id/et_about"
                android:background="@drawable/bg_edittext_lightblue"
                android:hint="Tentang Si Kecil"
                style="@style/TextAppearance1"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:layout_margin="15dp"
                android:padding="15sp"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_profil"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_image"
            android:id="@+id/btn_add_image"
            android:layout_margin="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Nama Lengkap"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/btn_add_image"/>

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Tanggal Lahir"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:focusable="false"
            android:inputType="date"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_today_24"
            app:layout_constraintTop_toBottomOf="@id/et_name"/>

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Jenis Kelamin"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_birth"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/dia_sangat_spesial"
            style="@style/TextAppearance1"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:buttonTint="@color/colorBlueBackground"
            app:layout_constraintTop_toBottomOf="@id/et_gender"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/btn_alert"
            android:id="@+id/alert"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_gender"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>