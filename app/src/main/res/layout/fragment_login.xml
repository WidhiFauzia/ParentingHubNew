<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LoginFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/bg_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle_page_login"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bg_bottom_pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_page_login"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/title_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:background="@drawable/ic_logo_parenting_hub_white"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:background="@drawable/ic_back_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="295dp"
                android:layout_height="175dp"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:background="@drawable/ic_family"
                app:layout_constraintDimensionRatio="64:39"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_white" />

            <TextView
                android:textAppearance="@style/TextTitleSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/selamat_datang_kembali"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:textAppearance="@style/TextBody2Regular"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/margin_medium_large"
                android:background="@drawable/bg_edittext_lightblue"
                android:hint="@string/username_atau_email"
                android:inputType="text"
                android:padding="@dimen/margin_medium"
                app:layout_constraintTop_toBottomOf="@id/right_image" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:layout_marginBottom="@dimen/margin_medium"
                app:boxBackgroundMode="none"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/et_username"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorBlueBackground">

                <EditText
                    android:id="@+id/et_password"
                    android:textAppearance="@style/TextBody2Regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_edittext_lightblue"
                    android:hint="@string/kata_sandi"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_medium"
                    app:layout_constraintTop_toBottomOf="@id/et_username" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_forgetPassword"
                android:textAppearance="@style/TextBody2Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:text="@string/lupa_kata_sandi"
                android:textColor="@color/colorBlueBackground"
                android:textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPass" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masuk"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/masuk"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:textAppearance="@style/TextBody2Regular"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/bg_button_blue"
                app:cornerRadius="@dimen/margin_medium_large"
                app:layout_constraintTop_toBottomOf="@id/tv_forgetPassword"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masuk_facebook"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/facebook"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_small_medium"
                android:textAppearance="@style/TextBody2Regular"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_button_blue_facebook"
                android:drawableStart="@drawable/ic_facebook_login"
                android:paddingStart="@dimen/margin_small_medium"
                app:cornerRadius="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@id/btn_masuk"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masuk_google"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/google"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_small_medium"
                android:textAppearance="@style/TextBody2Regular"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_button_blue_google"
                android:drawableStart="@drawable/ic_google_login"
                android:paddingStart="@dimen/margin_small_medium"
                app:cornerRadius="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@id/btn_masuk_facebook"/>

            <TextView
                android:id="@+id/tv_title4"
                android:textAppearance="@style/TextBody2Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="end"
                android:text="@string/belum_punya_akun"
                android:textColor="@color/colorText"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintEnd_toStartOf="@+id/tv_title5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_masuk_google" />

            <TextView
                android:id="@+id/tv_title5"
                android:textAppearance="@style/TextBody2Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/daftar_sekarang"
                android:textColor="@color/colorBlueBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_title4"
                app:layout_constraintTop_toBottomOf="@id/btn_masuk_google" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>