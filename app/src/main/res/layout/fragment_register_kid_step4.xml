<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RegisterKidStep4Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearButton"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="125dp"
                app:layout_constraintTop_toBottomOf="@id/cb_kembar"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btn_sebelumnya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sebelumnya"
                    android:background="@drawable/bg_button_lightblue"
                    android:layout_marginRight="10dp"
                    style="@style/TextAppearance1"
                    android:textSize="14sp"
                    android:textColor="@color/colorText"/>

                <Button
                    android:id="@+id/btn_simpan_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/simpan_data"
                    android:textSize="14sp"
                    android:background="@drawable/bg_button_blue"
                    style="@style/TextAppearance1"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_top_kid_register"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="255dp"
                android:layout_height="33dp"
                android:background="@drawable/title_group"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_center"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/pregnant"
                    app:layout_constraintTop_toBottomOf="@id/iv_top"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextAppearanceBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/selamat_parents_sebentar_lagi_si_kecil_akan_bergabung_dengan_keluarga"
                    android:textColor="@color/colorBlueBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_center"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title">

                    <EditText
                        android:id="@+id/et_gender"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="3"
                        android:background="@drawable/bg_edittext_lightblue"
                        android:hint="Perkiraan Umur Janin"
                        style="@style/EditTextAppearance"
                        android:padding="15dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/et_birth"/>

                    <TextView
                        android:id="@+id/tv_reminder"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/minggu"
                        style="@style/TextAppearance1"
                        android:textColor="@color/colorText"
                        android:textSize="16sp"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_prediksiLahir"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_edittext_lightblue"
                    android:hint="Prediksi Kelahiran"
                    style="@style/EditTextAppearance"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="15dp"
                    android:focusable="false"
                    android:inputType="date"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/ic_baseline_today_24"
                    app:layout_constraintTop_toBottomOf="@id/linear1"/>

                <CheckBox
                    android:id="@+id/cb_kembar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/umm_sepertinya_ini_kembar"
                    style="@style/TextAppearance1"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:buttonTint="@color/colorBlueBackground"
                    app:layout_constraintTop_toBottomOf="@id/et_prediksiLahir"
                    app:layout_constraintBottom_toTopOf="@id/linearButton"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>